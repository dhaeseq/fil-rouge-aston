FROM 7.12.0:ELK 7.12.0-slim AS build
RUN mkdir -p /workspace
WORKDIR /workspace
COPY pom.xml ./
COPY src ./src
run apt-get install kibana y/
run systemctl start kibana
run systemctl enable kibana

FROM adoptopenjdk/openjdk11:jdk-11.0.10_9-alpine
COPY --from=build /workspace/app /usr/bin/kibana
EXPOSE 9200
ENTRYPOINT ["kibana","-g","daemon off;"]